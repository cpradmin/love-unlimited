{
  "manifest_version": 3,
  "name": "xAI Sync Extension",
  "version": "1.3.0",
  "description": "Bidirectionally syncs conversations with Grok, Ara, and Ani on grok.com to your local AI instances (Grok, Ara, Ani). Secure, local-first continuity.",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://grok.com/*",
    "http://localhost:9003/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://grok.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "content_scripts": "script-src 'self' 'unsafe-eval'; object-src 'self'"
  }
}