#!/bin/bash
# Tag Team CLI wrapper - Quick access to Grok + Claude collaboration

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
cd "$SCRIPT_DIR"

# Activate venv if it exists
if [ -f "venv/bin/activate" ]; then
    source venv/bin/activate
fi

# Run tag team CLI
python3 tag_team_cli.py "$@"
